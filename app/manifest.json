{
  "name": "Teamweek Button",
  "version": "1.5.1",
  "manifest_version": 2,
  "description": "Add tasks to Teamweek directly from Github, Trello and GitLab",
  "short_name": "TW Button",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage",
    "identity",
    "https://teamweek.com/"
  ],
  "optional_permissions": [
    "http://*/",
    "https://*/",
    "tabs"
  ],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "js": ["scripts/content_github.js"],
      "css": ["styles/global.css", "styles/github.css"]
    },
    {
      "matches": ["https://*.trello.com/*"],
      "js": ["scripts/content_trello.js"],
      "css": ["styles/global.css", "styles/trello.css"]
    },
    {
      "matches": ["https://*.gitlab.com/*"],
      "js": ["scripts/content_gitlab.js"],
      "css": ["styles/global.css", "styles/gitlab.css"]
    }
  ],
  "web_accessible_resources": [
    "styles/*",
    "fonts/*"
  ],
  "minimum_chrome_version": "35",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
