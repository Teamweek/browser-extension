{
  "name": "Teamweek Button",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Add tasks to Teamweek directly from Github and Trello",
  "short_name": "TW Button",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "storage",
    "identity",
    "https://teamweek.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "js": ["scripts/content_github.js"],
      "css": ["styles/global.css"]
    },
    {
      "matches": ["https://*.trello.com/*"],
      "js": ["scripts/content_trello.js"],
      "css": ["styles/global.css"]
    }
  ],
  "background": {
    "scripts": ["background/oauth_flow.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "styles/*",
    "fonts/*"
  ],
  "minimum_chrome_version": "35"
}
