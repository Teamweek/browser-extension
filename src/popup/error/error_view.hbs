<div class="error">
  <div class="error__message">
    {{#if message}}
      <p>{{message}}</p>
    {{/if}}

    {{#if contact_us}}
      <p>
        Please contact us on <a href="mailto:support@teamweek.com">support@teamweek.com</a><br>
        describing how you got this error.
      </p>
    {{/if}}
  </div>
  <div class="error__buttons">
    <a href="#" class="button button--cancel" data-hook="button-close">Close</a>
    <a href="#" class="button button--text" data-hook="button-back">Back</a>
  </div>
</div>
