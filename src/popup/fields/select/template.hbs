<div class="control-group">
  <div class="row row--align-center control-group__control" data-hook='control'>
    <span class="control-group__label" data-hook="label"></span>
    <select class="control-group__select" data-hook='select'>
      <option value="" selected disabled data-hook='placeholder'></option>
      {{{options}}}
    </select>
  </div>
  <div class="row row--align-center spacing-2--inner-top font-tiny text--color-new-error" data-hook="error-text">
  </div>
  <div class="row row--align-center spacing-2--inner-top font-tiny text--color-new-link" data-hook="info-text">
  </div>
</div>
