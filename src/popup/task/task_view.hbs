<div class="task-popup">
  <div class="row row--align-center">
    <div class="popup__title row--grow">Add to Teamweek</div>
    <div id="tw-form-{{cid}}-account" data-hook="select-account"></div>
  </div>

  <div class="popup__errors" data-hook="errors"></div>

  <form data-hook="form">
    <div class="popup__form form">
      <div class="row row--align-center">
        <div class="column">
          <div data-hook="input-name"></div>
        </div>
      </div>

      <div class="row row--align-center">
        <div class="column">
          <div data-hook="select-user"></div>
        </div>
      </div>

      <div class="row row--align-center">
        <div class="column">
          <div data-hook="select-project"></div>
        </div>

        <div class="column">
          <div data-hook="input-estimate"></div>
        </div>
      </div>

      <div class="row row--align-center">
        <div class="column">
          <div data-hook="input-start-time"></div>
        </div>

        <div class="column">
          <div data-hook="input-end-time"></div>
        </div>
      </div>

      <div class="row row--align-center">
        <div class="column">
          <div data-hook="input-start-date"></div>
        </div>

        <div class="column">
          <div data-hook="input-end-date"></div>
        </div>
      </div>
    </div>

    <div class="popup__buttons">
      <input type="submit" value="Add" class="button button--submit popup__button" data-hook="button-submit" tabindex="10">
      <input type="button" value="Cancel" class="button button--cancel popup__button" data-hook="button-cancel" tabindex="11">
    </div>
  </form>

  <div class="task-popup__overlay" data-hook="done-overlay">
    <div class="task-popup__done">Done!</div>
  </div>
</div>
