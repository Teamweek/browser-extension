    <span data-hook="heading-label"></span>
  </div>

  <div data-hook="input" class="{{=it.css.input}} {{=it.css.heightauto}} row p:items-center p:cursor-pointer task-form__field-input-container" tabindex="{{=it.tabIndex}}">
    <span class="{{=it.css.input__label}} {{=it.css.input__placeholder}}" data-hook='input-placeholder'>Select or Add</span>
    <div data-hook="tags" class="{{=it.css.tags}} row p:flex-grow p:items-center font-small"></div>
    <span class="task-form__readonly {{=it.css.readonly}} icon-svg"></span>
  </div>
</div>
