<div class="custom-domains">
  <h3>Custom domains</h3>

  <table class="domains-table">
    <thead>
      <tr class="domains-table__header">
        <th>Domain</th>
        <th>Service</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody></tbody>

    <tfoot>
      <tr class="domains-table__footer">
        <td class="domains-table__domain">
          <input type="text" name="domain" placeholder="Domain...">
        </td>
        <td class="domains-table__service">
          <select name="service">
            <option value="">Service...</option>
            <option value="gitlab">GitLab</option>
          </select>
        </td>
        <td class="domains-table__action">
          <button>Add</button>
        </td>
      </tr>
    </tfoot>
  </table>
</div>